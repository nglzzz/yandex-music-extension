.volume {
    display: inline-block;
    position: relative;
    opacity: .4;
    cursor: pointer;
    line-height: 0;

    .no-volume & {
        display: none;
    }

    &_position_top {
        & .volume__control {
            top: 40px;
            bottom: 0;
            border-top-left-radius: 0;
            border-top-right-radius: 0;

            border-bottom-left-radius: 3px;
            border-bottom-right-radius: 3px;
        }

        & .volume__holder {
            border-bottom-left-radius: 0px;
            border-bottom-right-radius: 0px;

            border-top-left-radius: 3px;
            border-top-right-radius: 3px;
        }
    }

    &:hover, &_used, &_open {
        opacity: 1;

        & .volume__holder {
            display: inline-block;
        }

        & .volume__control {
            height: 120px;
        }
    }

    &_closed {
        opacity: .4 !important;

        & .volume__holder {
            display: none !important;
        }

        & .volume__control {
            height: 0 !important;
        }
    }

    &__btn {
        position: relative;
        display: inline-block;
    }

    &__icon {
        position: relative;
        background: center center no-repeat;
        background-position: 0 0;
        background-image: url(volume__sprite.svg);
        display: inline-block;
        width: 24px;
        height: 24px;
        margin: 8px;

        box-sizing: border-box;

        &_mute {
            background-position: 0 -48px;
        }

        &_half {
            background-position: 0 -24px;
        }
    }

    &__control {
        position: absolute;
        overflow: hidden;
        bottom: 40px;
        height: 0px;
        width: 40px;
        background: rgb(247, 246, 244);
        background: rgba(247, 246, 244, 0.95);
        border-top-left-radius: 3px;
        border-top-right-radius: 3px;

        -webkit-user-select: none;
        user-select: none;

        -webkit-transition: height .1s ease-out;
        -moz-transition: height .1s ease-out;
        transition: height .1s ease-out;
    }

    &__track {
        position: relative;
        height: 100px;
        width: 4px;
        margin 10px auto;
        border: solid 1px $border-muted;
        border-radius: 3px;
        overflow: hidden;
    }

    &__filled {
        position: absolute;
        bottom:0;
        left:0;
        right:0;
        background: #000;
    }

    &__holder {
        display: none;
        position: absolute;
        width: 100%;
        height: 100%;
        background: rgb(247, 246, 244);
        background: rgba(247, 246, 244, 0.95);

        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
    }
}
